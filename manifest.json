{
    "manifest_version": 2,
    "name": "tab-analyser",
    "description": "This extension keeps a count of the tabs opened and closed per day",
    "version": "0.1",
    "background": {
	"persistent": false,
	"scripts": ["background.js"]
    },
    "browser_action": {
	"default_title": "Number of tabs"
    },
    "permissions": [
	"tabs",
	"storage"
    ],
    "icons" : {
	"16": "icon.png"
    }
}
